<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="msc.project.foodmate.MainProfile"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="290dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:background="@drawable/food_img1">

            <TextView
                android:id="@+id/tvUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="User Name"
                android:textColor="@color/white"
                android:layout_marginTop="100dp"
                android:textSize="18sp"
                android:fontFamily="sans-serif-light"/>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="370dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:background="@color/white"
            android:layout_marginLeft="5dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="185dp"
            android:elevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/diets"
                        android:fontFamily="sans-serif-light"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvDietsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/orange700"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ingredients"
                        android:fontFamily="sans-serif-light"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvIngredientsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/orange700"
                        android:text="7"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/allergens"
                        android:fontFamily="sans-serif-light"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvAllergensCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/orange700"
                        android:text="3"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/cvDiets"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:elevation="5dp"
                app:cardCornerRadius="3dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/diet_img"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/diets"
                        android:fontFamily="sans-serif-light"
                        android:textSize="13sp"
                        android:paddingTop="10dp" />

                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvIngredients"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:elevation="5dp"
                app:cardCornerRadius="3dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ingredients_img"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Excluded"
                        android:fontFamily="sans-serif-light"
                        android:textSize="13sp"
                        android:paddingTop="10dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvAllergens"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:elevation="5dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="3dp"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/allergy_img2"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/allergens"
                        android:fontFamily="sans-serif-light"
                        android:textSize="13sp"
                        android:paddingTop="10dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>