<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="msc.project.foodmate.classes.MainHome">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
    <TextView
        android:id="@+id/tvFind"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"
        android:text="@string/find_restaurant" />

        <Button
            android:id="@+id/bSearch"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/tvFind"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:text="@string/search"
            android:background="@color/orange700"
            android:elevation="3dp"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:id="@+id/tvRecent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/bSearch"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-light"
            android:text="@string/popular" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvRecent"
            android:layout_below="@id/tvRecent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </RelativeLayout>

</FrameLayout>
